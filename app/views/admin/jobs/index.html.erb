<div class = "pull-right">
  <%= link_to("新增", new_admin_job_path, :class => "btn btn-default")%>
</div>
<br><br>


<table class= "table table-boldered">
  <thead>
    <td>岗位名称</td>
    <td>已收简历数</td>
    <td>薪资下限</td>
    <td>薪资上限</td>
    <td>操作</td>
    <td>刊登时间</td>
  </thead>
  <% @jobs.each do |job| %>
  <tr>
    <td>
      <%= render_job_status(job)%>
      <%= link_to(job.title, admin_job_path(job))%>
    </td>
    <td><%=link_to(job.resumes.count, admin_job_resumes_path(job))%></td>
    <td><%= job.wage_lower_bound%></td>
    <td><%= job.wage_upper_bound%>

    <td>
      <%= link_to("编辑",edit_admin_job_path(job))%>
      |
      <%= link_to("删除",admin_job_path(job), :method => :delete,
        :data => {:confirm => "确定删除吗？"})%>
        |
        <% if job.is_hidden %>
          <%= link_to("公开", publish_admin_job_path(job), :method => :post ,:class => "btn btn-xs btn-default")%>
        <% else %>
          <%= link_to("隐藏", hide_admin_job_path(job), :method => :post, :class => "btn btn-xs btn-default")%>
        <% end %>
    </td>
    <td>
      <%= job.created_at %>
    </td>
  </tr>
  <% end %>
</table>
